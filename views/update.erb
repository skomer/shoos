<h3>Update This Shoos Order</h3>

<form action="/update" method="post">
  <label for="customer_name">Name:</label>
  <input type="text" name="customer_name" value=<%=@customer_name%>>

  <br><br>
  <label for="customer_address">Address:</label>
  <input type="text" name="customer_address" value="<%=@customer_address%>">

  <br><br>
  <label for="size">Select a size:</label>
  <select name="size" value="<%=@size%>">
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
    <option value="10">10</option>
  </select>

  <br><br>
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" min=1 value="<%=@quantity%>">

  <br><br>
  <input type="submit" value="Update this order">

</form>